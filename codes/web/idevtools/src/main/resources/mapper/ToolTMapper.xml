<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.idevtools.mapper.ToolTMapper" >
  <resultMap id="BaseResultMap" type="cn.idevtools.po.ToolT" >
    <id column="tool_id" property="toolId" jdbcType="INTEGER" />
    <result column="tool_name" property="toolName" jdbcType="VARCHAR" />
    <result column="tool_version" property="toolVersion" jdbcType="VARCHAR" />
    <result column="code_name" property="codeName" jdbcType="VARCHAR" />
    <result column="description" property="description" jdbcType="VARCHAR" />
    <result column="website" property="website" jdbcType="VARCHAR" />
    <result column="download_links" property="downloadLinks" jdbcType="VARCHAR" />
    <result column="created_by" property="createdBy" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="last_updated_by" property="lastUpdatedBy" jdbcType="VARCHAR" />
    <result column="last_update_time" property="lastUpdateTime" jdbcType="TIMESTAMP" />
    <result column="version_number" property="versionNumber" jdbcType="INTEGER" />
  </resultMap>
  <!--带标签信息的工具结果集 王沁宽 2019.03.07-->
  <resultMap id="ToolWithTagResultMap" type="cn.idevtools.po.ToolTagVO">
    <!--工具基本信息-->
    <id column="tool_id" property="tool.toolId" jdbcType="INTEGER" />
    <result column="tool_name" property="tool.toolName" jdbcType="VARCHAR" />
    <result column="tool_version" property="tool.toolVersion" jdbcType="VARCHAR" />
    <result column="code_name" property="tool.codeName" jdbcType="VARCHAR" />
    <result column="description" property="tool.description" jdbcType="VARCHAR" />
    <result column="website" property="tool.website" jdbcType="VARCHAR" />
    <result column="download_links" property="tool.downloadLinks" jdbcType="VARCHAR" />
    <result column="created_by" property="tool.createdBy" jdbcType="VARCHAR" />
    <result column="create_time" property="tool.createTime" jdbcType="TIMESTAMP" />
    <result column="last_updated_by" property="tool.lastUpdatedBy" jdbcType="VARCHAR" />
    <result column="last_update_time" property="tool.lastUpdateTime" jdbcType="TIMESTAMP" />
    <result column="version_number" property="tool.versionNumber" jdbcType="INTEGER" />
    <!--标签基本信息-->
    <collection property="toolTags" ofType="cn.idevtools.po.ToolTagT">
      <id column="tag_id" property="tagId" jdbcType="INTEGER" />
      <result column="parent_tag_id" property="parentTagId" jdbcType="INTEGER" />
      <result column="tag_code" property="tagCode" jdbcType="VARCHAR" />
      <result column="tag_meaning" property="tagMeaning" jdbcType="VARCHAR" />
      <result column="description" property="description" jdbcType="VARCHAR" />
    </collection>
  </resultMap>

  <sql id="Base_Tool_List" >
    tool_id, tool_name, tool_version, code_name, description, website, download_links, last_update_time
  </sql>

  <!-- 根据toolId查询对应的工具信息 southday 2019.03.07 -->
  <select id="selectToolByToolId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
      SELECT <include refid="Base_Tool_List"/>
        FROM tool_t
       WHERE tool_id = #{toolId}
  </select>

  <!--标签基本字段 王沁宽 2019.03.07-->
  <sql id="Tag_Column_List" >
    tool_tag_t.tag_id, tool_tag_t.parent_tag_id, tool_tag_t.tag_code, tool_tag_t.tag_meaning, tool_tag_t.description
  </sql>

  <!--全部工具 王沁宽 2019.03.07-->
  <select id="selectAllTool" resultMap="BaseResultMap">
    select * from tool_t
  </select>

  <!--插入工具 王沁宽 2019.03.07-->
  <insert id="insertTool">
    insert into tool_t
    ( tool_name, tool_version, code_name, description, website, download_links,
    created_by, create_time, last_updated_by, last_update_time, version_number )
    values
    ( #{toolName},#{toolVersion},#{codeName},#{description},#{website},#{downloadLinks},
    #{createdBy},#{createTime},#{lastUpdatedBy},#{lastUpdateTime},#{versionNumber} )
  </insert>

  <!--查询工具 王沁宽 2019.03.07-->
  <select id="selectTool" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from tool_t
    <where>
      1=1
      <if test="toolId != null">
        and tool_id = #{toolId}
      </if>
      <if test="toolName != null and toolName != ''">
        and tool_name like concat('%',#{toolName},'%')
      </if>
      <if test="toolVersion != null and toolVersion != ''">
        and tool_version like concat('%',#{toolVersion},'%')
      </if>
      <if test="codeName != null and codeName != ''">
        and code_name like concat('%',#{codeName},'%')
      </if>
      <if test="description != null and description != ''">
        and description like concat('%',#{description},'%')
      </if>
      <if test="website != null and website != ''">
        and website like concat('%',#{website},'%')
      </if>
      <if test="downloadLinks != null and downloadLinks != ''">
        and download_links concat('%',#{downloadLinks},'%')
      </if>
      <if test="createdBy != null and createdBy != ''">
        and created_by concat('%',#{createdBy},'%')
      </if>
      <if test="createTime != null and createTime != ''">
        and create_time concat('%',#{createTime},'%')
      </if>
      <if test="lastUpdatedBy != null and lastUpdatedBy != ''">
        and last_updated_by concat('%',#{lastUpdatedBy},'%')
      </if>
      <if test="lastUpdateTime != null and lastUpdateTime != ''">
        and last_update_time concat('%',#{lastUpdateTime},'%')
      </if>
      <if test="versionNumber != null and versionNumber != ''">
        and version_number concat('%',#{versionNumber},'%')
      </if>
    </where>
  </select>

  <!--根据id删除工具 王沁宽 2019.03.07-->
  <delete id="deleteToolById">
    delete from tool_t where tool_id = #{toolId}
  </delete>

  <!--修改工具 王沁宽 2019.03.07-->
  <update id="updateTool">
    update tool_t
    <set>
      <if test="toolName != null and toolName != ''">
        tool_name = #{toolName},
      </if>
      <if test="toolVersion != null and toolVersion != ''">
        tool_version = #{toolVersion},
      </if>
      <if test="codeName != null and codeName != ''">
        code_name = #{codeName},
      </if>
      <if test="description != null and description != ''">
        description = #{description},
      </if>
      <if test="website != null and website != ''">
        website = #{website},
      </if>
      <if test="downloadLinks != null and downloadLinks != ''">
        download_links = #{downloadLinks},
      </if>
      <if test="createdBy != null and createdBy != ''">
        created_by = #{createdBy}
      </if>
      <if test="createTime != null and createTime != ''">
        create_time = #{createTime}
      </if>
      <if test="lastUpdatedBy != null and lastUpdatedBy != ''">
        last_updated_by = #{lastUpdatedBy}
      </if>
      <if test="lastUpdateTime != null and lastUpdateTime != ''">
        last_update_time = #{lastUpdateTime}
      </if>
      <if test="versionNumber != null and versionNumber != ''">
        version_number = #{versionNumber}
      </if>
    </set>
    where tool_id = #{toolId}
  </update>

  <!--根据id查询带标签信息的工具信息 王沁宽 2019.03.07-->
  <select id="selectToolWithTagById" resultMap="ToolWithTagResultMap">
    select t.tool_id, t.tool_name, t.tool_version, t.code_name, t.description, t.website, t.download_links, created_by, create_time, last_updated_by, last_update_time, version_number,
    tag.tag_id, tag.parent_tag_id, tag.tag_code, tag.tag_meaning, tag.description
    from
    (select * from tool_t where tool_id=1) t
    NATURAL join tool_tag_rel_t r
    JOIN tool_tag_t tag on tag.tag_id = r.tag_id
  </select>
</mapper>
